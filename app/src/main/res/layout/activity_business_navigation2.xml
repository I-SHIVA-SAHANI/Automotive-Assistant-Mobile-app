<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="Business.BusinessNavigation2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bankrus"
            android:gravity="center"
            android:text="@string/business_type"
            android:textColor="@color/black"
            android:textSize="29sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/mech"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/mechanic" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="17dp"
                        android:layout_toRightOf="@+id/mech"
                        android:backgroundTint="@color/greyIshWhite"
                        android:fontFamily="@font/changa_bold"
                        android:onClick="callGarage"
                        android:text="@string/garage"
                        android:textColor="@color/black"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="50dp">

                    <ImageView
                        android:id="@+id/fuel"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/fuel" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="17dp"
                        android:layout_toRightOf="@+id/fuel"
                        android:backgroundTint="@color/greyIshWhite"
                        android:fontFamily="@font/changa_bold"
                        android:onClick="callFuelBunk"
                        android:text="@string/fuel_bunk"
                        android:textColor="@color/black"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="50dp">

                    <ImageView
                        android:id="@+id/ev"
                        android:layout_width="110dp"
                        android:layout_height="150dp"
                        android:src="@drawable/electric" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="17dp"
                        android:layout_toRightOf="@+id/ev"
                        android:backgroundTint="@color/greyIshWhite"
                        android:fontFamily="@font/changa_bold"
                        android:onClick="csllRechargeBunk"
                        android:text="Recharge Bunk"
                        android:textColor="@color/black"
                        android:textStyle="bold" />


                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</ScrollView>